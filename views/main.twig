{% extends "__layout.twig" %}



{% block content %}
{% macro btn(text, url, bool, type) %}
    {% if bool==true %}
        {% if type=="warning" %}
            <a href="{{url}}" class="btn btn-{{ type }}" role="button">{{text}}</a>
        {% elseif type==null %}
            <a href="{{url}}" class="btn btn-primary" role="button">{{text}}</a>
        {% endif %}
    {% elseif bool==false %}
        <a href="{{url}}" class="btn btn-link" role="button">{{text}}</a>
    {% endif %}
{% endmacro %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

<div class="container">
    <div class="row d-flex">
{% for object in space_objects %}

<div class="col" style="position:relative; margin: 10px; padding: 5px; border:2px solid grey; width: 200px; max-width: 235px; min-width: 220px;">
    <div class="position-absolute" style="right: 4px; top: 4px;">
        <form action="/space-object/delete" method="POST">
            <input type="hidden" name="id" value="{{ objects.id }}">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-times"></i>
            </button>
        </form>
    </div>
    <div class="position-absolute" style="right: 50px; top: 4px;">
        <form action="/space-object/{{ object.id }}/edit">
            <button type="submit" class="btn btn-danger">
                Edit
            </button>
        </form>
    </div>
    <div class="row"><img src="{{ object.image }}" style="width:100%; height:200px; object-fit:cover;"></div>
    <div class="row" style="display: block; align-items: center; text-align: center; margin: 0 auto; padding-top: 10px;"><a href="/space-object/{{ object.id }}" class="btn btn-primary" role="button">{{object.title}}</a></div>
    <div class="row" ><div class="col"><a href="/space-object/{{object.id}}?show=image" class="btn btn-link" role="button">Картинка</a></div><div class="col"><a href="/space-object/{{object.id}}?show=info" class="btn btn-link" role="button">Описание</a></div></div>
    
</div>
{% endfor %}

{% for animal in forest_animals %}

            <div class="col" style="margin: 10px; padding: 5px; border:2px solid grey; width: 200px; max-width: 235px; min-width: 220px; position:relative;">
                <div class="position-absolute" style="right: 4px; top: 4px;">
                    <form action="/forest-animals/delete" method="POST">
                        <input type="hidden" name="id" value="{{ animal.id }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i>
                        </button>                      
                    </form>
                </div>
                <div class="position-absolute" style="right: 50px; top: 4px;">
                    <form action="/forest-animals/{{ animal.id }}/edit" style="right: 10px; top: 0px;">
                        <input type="hidden" name="id" value="{{ animal.id }}">
                        <button type="submit" class="btn btn-danger">
                            Edit
                        </button>
                    </form>
                </div>
                <div class="row"><img src="{{ animal.image }}" style="width:100%; height:200px; object-fit:cover;"></div>
                <div class="row" style="display: block; align-items: center; text-align: center; margin: 0 auto; padding-top: 10px;"><a href="/forest-animals/{{ animal.id }}" class="btn btn-primary" role="button">{{animal.title}}</a></div>
                <div class="row" ><div class="col"><a href="/forest-animals/{{animal.id}}?show=image" class="btn btn-link" role="button">Картинка</a></div><div class="col"><a href="/forest-animals/{{animal.id}}?show=info" class="btn btn-link" role="button">Описание</a></div></div>
                
            </div>
{% endfor %}

</div>
</div>
{% endblock %}
{% macro btn(text, url, select) %}
    {% if text==select %}
        <a href="{{url}}" class="btn btn-link active" role="button">{{text}}</a>
    {% elseif text!=select %}
        <a href="{{url}}" class="btn btn-link" role="button">{{text}}</a>
    {% endif %}
{% endmacro %}





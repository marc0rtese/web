{% extends "__layout.twig" %}

{% block content %}
    <h1>Добавление птички</h1>
    <hr>

    {% if message %}
    <div class="alert alert-info">
        {{ message }}
        <a href="/space-object/{{id}}">открыть новый объект</a>
    </div>
    {% endif %}

    <form enctype="multipart/form-data" method="POST" class="row g-3">
        <div class="col-6">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="col-6">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
                <option value="галактика">Водоплавающее</option>
                <option value="туманность">Летающее</option>
            </select>
        </div>
        <div class="col-12">
            <label class="form-label">Картинка</label>
            <input class="form-control" type="file" name="image">
        </div>
        <div class="col-12">
            <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5"></textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>

{% endblock %}